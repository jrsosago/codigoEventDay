<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImagenLocalizacion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:layout_weight="0.95"
            app:srcCompat="@drawable/location" />

        <TextView
            android:id="@+id/txtNombreLugar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Villeta"
            android:textAllCaps="true"
            android:textSize="40sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botonAgregarEvento"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="250dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bordes_redondos"
            android:text="Agregar Evento" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <Button
            android:id="@+id/BotonConcierto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/bordes_redondos"
            android:gravity="left|center"
            android:text="Concierto" />

        <Button
            android:id="@+id/BotonConciertoUno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/bordes_redondos"
            android:gravity="left|center"
            android:text="Concierto 2" />

        <Button
            android:id="@+id/botonConciertoDos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/bordes_redondos"
            android:gravity="left|center"
            android:text="CONCIERTO 3" />

        <Button
            android:id="@+id/BotonConciertoTres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/bordes_redondos"
            android:gravity="left|center"
            android:text="CONCIERTO 4" />
    </LinearLayout>
</LinearLayout>